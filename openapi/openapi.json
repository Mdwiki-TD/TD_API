{
    "openapi": "3.0.0",
    "info": {
        "title": "Group Pages API",
        "version": "1.0.0",
        "description": "API for accessing group pages data"
    },
    "servers": [
        {
            "url": "/",
            "description": "MdWiki API."
        }
    ],
    "tags": [
        {
            "name": "pages_infos",
            "description": "Endpoints providing information about pages."
        },
        {
            "name": "pages",
            "description": "Endpoints related to page lists and details."
        },
        {
            "name": "identifiers",
            "description": "Endpoints for identifiers like QIDs."
        },
        {
            "name": "views",
            "description": "Endpoints providing page view statistics."
        },
        {
            "name": "users",
            "description": "Endpoints related to users and their activity."
        },
        {
            "name": "statistics",
            "description": "General statistics and leaderboard data."
        },
        {
            "name": "languages",
            "description": "Endpoints providing language information."
        },
        {
            "name": "other",
            "description": "Miscellaneous endpoints."
        }
    ],
    "components": {
        "parameters": {
            "Depth": {
                "name": "Depth",
                "in": "query",
                "schema": {
                    "type": "number"
                },
                "description": "Depth Level"
            },
            "User": {
                "name": "User",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Coordinator Username"
            },
            "title": {
                "name": "title",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Title"
            },
            "lang": {
                "name": "lang",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Language code"
            },
            "user": {
                "name": "user",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Username"
            },
            "target": {
                "name": "target",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Target"
            },
            "cat": {
                "name": "cat",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Category"
            },
            "group": {
                "name": "group",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Group by field"
            },
            "order": {
                "name": "order",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Order by field"
            },
            "pupdate": {
                "name": "pupdate",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Date of publication"
            },
            "add_date": {
                "name": "add_date",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Date of addition to DB"
            },
            "limit": {
                "name": "limit",
                "in": "query",
                "schema": {
                    "type": "integer",
                    "default": 50
                },
                "description": "Limit results"
            },
            "offset": {
                "name": "offset",
                "in": "query",
                "schema": {
                    "type": "integer",
                    "default": 0
                },
                "description": "Offset results"
            },
            "year": {
                "name": "year",
                "in": "query",
                "schema": {
                    "type": "integer"
                },
                "description": "year of date"
            },
            "YEAR_date": {
                "name": "YEAR(date)",
                "in": "query",
                "schema": {
                    "type": "integer"
                },
                "description": "year of date"
            },
            "select": {
                "name": "select",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Select fields"
            },
            "translate_type": {
                "name": "translate_type",
                "in": "query",
                "schema": {
                    "type": "string",
                    "enum": [
                        "all",
                        "lead"
                    ]
                },
                "description": "Translation type"
            },
            "distinct": {
                "name": "distinct",
                "in": "query",
                "schema": {
                    "type": "boolean"
                },
                "description": "Distinct results"
            },
            "Deleted": {
                "name": "Deleted",
                "in": "query",
                "schema": {
                    "type": "boolean"
                },
                "description": "0 or 1"
            }
        },
        "responses": {
            "Success": {
                "description": "Successful response",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "time": {
                                    "type": "string",
                                    "example": "0.26"
                                },
                                "query": {
                                    "type": "string"
                                },
                                "source": {
                                    "type": "string",
                                    "example": "db"
                                },
                                "length": {
                                    "type": "integer",
                                    "example": 50
                                },
                                "results": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                "supported_params": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "paths": {
        "/api.php?get=pages": {
            "get": {
                "summary": "Retrieve pages list",
                "description": "Corresponds to calling `api.php?get=pages` with query parameters.",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/title"
                    },
                    {
                        "$ref": "#/components/parameters/lang"
                    },
                    {
                        "$ref": "#/components/parameters/user"
                    },
                    {
                        "$ref": "#/components/parameters/target"
                    },
                    {
                        "$ref": "#/components/parameters/cat"
                    },
                    {
                        "$ref": "#/components/parameters/group"
                    },
                    {
                        "$ref": "#/components/parameters/order"
                    },
                    {
                        "$ref": "#/components/parameters/pupdate"
                    },
                    {
                        "$ref": "#/components/parameters/add_date"
                    },
                    {
                        "$ref": "#/components/parameters/offset"
                    },
                    {
                        "$ref": "#/components/parameters/year"
                    },
                    {
                        "$ref": "#/components/parameters/YEAR_date"
                    },
                    {
                        "$ref": "#/components/parameters/select"
                    },
                    {
                        "$ref": "#/components/parameters/translate_type"
                    },
                    {
                        "$ref": "#/components/parameters/distinct"
                    },
                    {
                        "$ref": "#/components/parameters/Deleted"
                    },
                    {
                        "$ref": "#/components/parameters/limit"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Success"
                    }
                },
                "tags": [
                    "pages"
                ]
            }
        },
        "/api.php?get=pages_users": {
            "get": {
                "summary": "Get pages users data",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/lang"
                    },
                    {
                        "$ref": "#/components/parameters/user"
                    },
                    {
                        "$ref": "#/components/parameters/target"
                    },
                    {
                        "$ref": "#/components/parameters/title"
                    },
                    {
                        "$ref": "#/components/parameters/order"
                    },
                    {
                        "$ref": "#/components/parameters/pupdate"
                    },
                    {
                        "$ref": "#/components/parameters/add_date"
                    },
                    {
                        "$ref": "#/components/parameters/group"
                    },
                    {
                        "$ref": "#/components/parameters/limit"
                    },
                    {
                        "$ref": "#/components/parameters/offset"
                    },
                    {
                        "$ref": "#/components/parameters/select"
                    },
                    {
                        "$ref": "#/components/parameters/distinct"
