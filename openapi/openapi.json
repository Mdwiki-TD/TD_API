                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Success"
                    }
                },
                "tags": [
                    "pages"
                ]
            }
        },
        "/api.php?get=pages_with_views": {
            "get": {
                "summary": "Get pages with views data",
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Success"
                    }
                },
                "parameters": [
                    {
                        "$ref": "#/components/parameters/limit"
                    }
                ],
                "tags": [
                    "pages"
                ]
            }
        },
        "/api.php?get=pages_users_to_main": {
            "get": {
                "summary": "Get pages users to main data",
                "responses": {
                    "200": {
