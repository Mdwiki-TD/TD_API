                ]
            }
        },
        "/api.php?get=in_process": {
            "get": {
                "summary": "Get in process data",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/lang"
                    },
                    {
                        "$ref": "#/components/parameters/user"
                    },
                    {
                        "$ref": "#/components/parameters/limit"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Success"
                    }
                },
                "tags": [
                    "pages"
                ]
            }
        }
    }
}
